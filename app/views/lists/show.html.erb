<%= render "shared/banner", object: { title: @list.name, caption: "", image: (cl_image_path @list.photo.key) } %>

<div class="container">
  <div class="d-flex flex-row-reverse py-3">
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-success text-white" %>
  </div>

  <ul class="list-unstyled">
    <div class="row">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="col-6">
          <div class="card-trip my-2">
            <img src="<%= bookmark.movie.poster_url %>" class="d-flex justify-content-center"/>
            <div class="card-trip-infos">
              <div>
                <h2><%= bookmark.movie.title %></h2>
                <p class="card-text my-2"><%= bookmark.movie.overview %></p>
                <div class="d-flex justify-content-between py-2">
                  <p>
                    <i class="fa-solid fa-quote-left"></i>
                    <strong>
                      <%= bookmark.comment %>
                    </strong>
                  </p>
                  <%= link_to "delete", bookmark_path(bookmark), data: {turbo_method: :delete}, class: "text-decoration-none text-danger" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </ul>
</div>
