<h2><%= @list.name.capitalize %></h2>

<h3>Movies:</h3>
<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
      <p><%= bookmark.movie.title %></p>
      <p><%= bookmark.movie.overview %></p>
      <%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete} %>
    </li>
  <% end %>
</ul>
