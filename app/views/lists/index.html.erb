<%= render "shared/banner", object: ["Save any kind of movie", "Classic"] %>

<div class="container">
  <div class="d-flex justify-content-between py-3">
    <h2>My Lists</h2>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-success text-white" %>
  </div>

  <ul class="list-unstyled">
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.movies.first.poster_url %>)">
          <li><%= link_to list.name, list_path(list), class: "text-decoration-none text-white" %></li>
        </div>
      <% end %>
    </div>
  </ul>
</div>
